<div class="page-header">
  <h4>This is <%=User.find(@user).username.capitalize%>'s page</h4>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Username</th>
                        <th>User ID</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%=User.find(@user).email%></td>
                        <td><%=User.find(@user).username%></td>
                        <td><%=User.find(@user).id%></td>
                    </tr>
                </tbody>
            </table>
        </div>  
    </div>  
 </div>
 
 <div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @photos.where(user_id: @user).each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><img src="<%= photo.image %>" width="500"></td>
        <td><%= photo.user_id %></td>
        <td>
          <a href="/photos/<%= photo.id %>" class="btn-sm btn-primary">Show</a>
          <a href="/photos/<%= photo.id %>/edit" class="btn-sm btn-warning">Edit</a>
          <a href="/delete_photo/<%= photo.id %>" class="btn-sm btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

