<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<% @photos.each do |photo| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a class="text-primary" href="/users/<%= photo.user_id %>"><%=User.find(photo.user_id).username %> </a>
          <small>
            <%=time_ago_in_words(photo.updated_at)%> ago
          </small>
        </h6>
        </h3>
      </div>
        <div class="panel-body">
          <a href="/photos/<%= photo.user_id %>">
            <td><img src="<%= photo.image %>" class="img-responsive" alt="Responsive image"></td>
          </a>
          <p>
              <a href="/photos/Click to Like"</a>
                <i class="fa fa-heart"></i>
              </a>
              <%=Like.where(photo_id: photo).pluck(:user_id).to_sentence %> like this
          </p>
          <ul class="media-list">
  
            <li class="media">
              <div class="media-body">
                <h6 class="media-heading">

                <p><%=photo.caption%></p>
              </div>
            </li>            
          </ul>
          <div class="btn-group btn-group-justified">
            <a href="/photos" class="btn btn-primary">
              <i class="fa fa-chevron-left"></i>
            </a>
          </div>
        </div>
    </div>
  </div>            
</div>            
<%end%> 